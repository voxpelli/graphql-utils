{
  "name": "@voxpelli/graphql-utils",
  "version": "0.2.0",
  "description": "My personal helpers and types for GraphQL",
  "homepage": "http://github.com/voxpelli/graphql-utils",
  "repository": {
    "type": "git",
    "url": "git://github.com/voxpelli/graphql-utils.git"
  },
  "keywords": [],
  "author": "Pelle Wessman <pelle@kodfabrik.se> (http://kodfabrik.se/)",
  "license": "MIT",
  "engines": {
    "node": "^20.9.0 || >=22.0.0"
  },
  "type": "module",
  "exports": "./index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts",
    "index.d.ts.map",
    "lib/**/*.js",
    "lib/**/*.d.ts",
    "lib/**/*.d.ts.map"
  ],
  "scripts": {
    "build:0": "run-s clean",
    "build:1-declaration": "tsc -p declaration.tsconfig.json",
    "build": "run-s build:*",
    "check:installed-check": "installed-check",
    "check:knip": "knip",
    "check:lint": "eslint",
    "check:tsc": "tsc",
    "check:type-coverage": "type-coverage --detail --strict --at-least 99 --ignore-files 'test/*'",
    "check": "run-s clean && run-p check:*",
    "clean:declarations-top": "rm -rf $(find . -maxdepth 1 -type f -name '*.d.ts*' ! -name 'index.d.ts')",
    "clean:declarations-lib": "rm -rf $(find lib -type f -name '*.d.ts*' ! -name '*-types.d.ts')",
    "clean": "run-p clean:*",
    "prepare": "husky",
    "prepublishOnly": "run-s build",
    "test:mocha": "c8 --reporter=lcov --reporter=text mocha 'test/**/*.spec.js'",
    "test-ci": "run-s test:*",
    "test": "run-s check test:*"
  },
  "dependencies": {
    "type-fest": "^4.30.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.4",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.17",
    "@types/ws": "^8.5.14",
    "@voxpelli/eslint-config": "^22.2.0",
    "@voxpelli/tsconfig": "^15.1.1",
    "c8": "^10.1.3",
    "chai": "^4.5.0",
    "eslint": "^9.16.0",
    "fastify": "^5.2.1",
    "graphql": "^16.10.0",
    "husky": "^9.1.7",
    "installed-check": "^9.3.0",
    "knip": "^5.38.4",
    "mercurius": "^16.0.1",
    "mocha": "^11.1.0",
    "npm-run-all2": "^7.0.2",
    "sql-template-tag": "^5.2.1",
    "type-coverage": "^2.29.7",
    "typescript": "~5.7.3",
    "validate-conventional-commit": "^1.0.4"
  },
  "peerDependencies": {
    "@graphql-codegen/cli": "^5.0.4",
    "fastify": "^5.2.1",
    "graphql": "^16.10.0",
    "mercurius": "^16.0.1",
    "sql-template-tag": "^5.2.1"
  },
  "peerDependenciesMeta": {
    "@graphql-codegen/cli": {
      "optional": true
    }
  }
}
